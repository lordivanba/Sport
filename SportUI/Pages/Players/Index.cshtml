@page
@model SportUI.Pages.Players.IndexModel
@{
    ViewData["Title"] = "Players";
}

<h1 class="text-center text-info">Players</h1>
<div class="card-deck">
    @foreach (var item in Model.Players)
    {
        var imgPath = $"~/images/{(string.IsNullOrEmpty(item.Picture) ? "noimage.jpg": item.Picture)}";
    <div class="card bg-light m-3" style="min-width:18rem; max-width:30.5%">
        <div class="card-header">
            <h4>@item.Name @item.LastName</h4>
        </div>
        <img class="card-img-top img-thumbnail imgThumbnail" src="@imgPath"
             alt="@item.PlayerID" asp-append-version="true">
        <div class="card-body">
            <p class="card-text">
                <ul>
                    <li>Nationality: @item.Nationality</li>
                    <li>Position: @item.Position</li>
                    <li>Height: @item.Height m</li>
                    <li>Weight: @item.Weight kg</li>
                </ul>
            </p>
        </div>
        <div class="card-footer text-center">
            <a href="#" class="btn btn-info m-1">Profile</a>
            <a href="#" class="btn btn-primary m-1">Edit</a>
            <a href="#" class="btn btn-dark m-1">See Stats</a>
            <a href="#" class="btn btn-danger m-1">Generate Report</a>
        </div>
    </div>
    }
</div>
